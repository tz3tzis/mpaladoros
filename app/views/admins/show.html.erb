<div>
	<%= month_calendar events: @games do |date, games| %>
	  <%= date %>
	 
		  <% games.each do |game| %>

		    <div>
		    <% if game.admin_id == current_admin.id %>

		    		<div style="color: red;font-style: italic;"><%= game.name %></div>
			      <div style="color: red;font-size:16px;">
			      	<%= game.start_time.strftime("%I:%M - ") %>
			      </div>
			      <% game.end_time = game.start_time + 90.minutes %>
			      <div style="color: red;font-size:18px;">
			      	<%= game.end_time.strftime("%I:%M") %>
			      </div>

		     <% end %>
		    </div>

		  <% end %>
	
	<% end %>

</div>

