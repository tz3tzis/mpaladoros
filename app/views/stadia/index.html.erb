<h2> Αυτα είναι τα γήπεδα σου </h2>
<table>
  <ul style="list-style-type:none">

    
	<% current_admin.stadia.each do |t| %>

    <div class="card">
      <div class="card-block">
        <div id="map"></div>
      </div>
    </div>
		
		<br>

      <div id="myCarousel" class="carousel slide" data-ride="carousel" style = "width:500px; height: 400px; ">
          <!-- Indicators -->
          <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="1" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
            <li data-target="#myCarousel" data-slide-to="3"></li>
          </ol>

          <div class="carousel-inner" role="listbox">

            <div class="item active">
                <%=image_tag "#{t.stadium_name}/1.jpg" %>
                <h3><%= "Γηπέδου : " + t.stadium_name %></h3>
                <p><%= "Χωρητικότητα : " + t.max_players.to_s %></p>
                <p><%= "Τιμή : " + t.price.to_s + "/άτομο"%></p>

            </div>
            <div class="item">
                <%=image_tag "#{t.stadium_name}/2.jpg" %>
                <h3><%= "Γηπέδου : " + t.stadium_name %></h3>
                <p><%= "Χωρητικότητα : " + t.max_players.to_s %></p>
                <p><%= "Τιμή : " + t.price.to_s + "/άτομο"%></p>
            </div>
            <div class="item">
                <%= image_tag "#{t.stadium_name}/3.jpg" %>
                <h3><%= "Γηπέδου : " + t.stadium_name %></h3>
                <p><%= "Χωρητικότητα : " + t.max_players.to_s %></p>
                <p><%= "Τιμή : " + t.price.to_s + "/άτομο"%></p>
            </div>

          </div>


          <!-- Left and right controls -->
          <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
          </a>   
      </div>   
        
  <% end %>
  <br>
  <ul style="list-style-type:none">
</table>    
<script src="https://code.jquery.com/jquery-2.1.4.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js"></script>





 

