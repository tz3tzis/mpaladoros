<h3 id ='title'> Συνδεθήκατε επιτυχώς! </h3>

<%= link_to 'Δημιούργησε Παιχνίδι', new_game_url, id: 'creategame' %>

<div id="user">	
  <% unless current_user %> 
    <%= link_to "Sign in with Facebook", user_facebook_omniauth_authorize_path , id: 'button'%>
  <% else %>
  	<ul>
     <li><%= current_user.name %> <%= current_user.email %> </li>
     <li> <%= image_tag(current_user.largeimage) %> </li>
     <%= button_to "Logout", destroy_user_session_path, method: :delete %>
    </ul>
  <% end %>
</div>

<div id='gametable'>

  <table  id='gametable' >
    
    <% @games.order("created_at DESC").each do |g| %>
      <tr>
        <ul style="list-style-type:none" id = 'gameslayout'>
          <li id='white'><%= g.start_time.strftime("%I:%M -")+g.end_time.strftime("%I:%M") %></li>
          <li id='white'><%= g.admin_id %></li>
          <li id='white'><%= g.name %></li>
          <li id='white'><%= g.id %></li>
          <li id='white'><%= link_to 'Delete game' , delete_path(g.id), method: :delete,  data: { confirm: 'Are you sure?' }, id: 'join' %>
            <%= link_to 'Join game' , game_teams_path(g.id), id: 'join' %>
          </li>
        </ul>
      </tr>
      <br>
    <% end %>
    </ul>
 </table>
</div>


