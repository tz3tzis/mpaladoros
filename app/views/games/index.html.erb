<h3 id ='title'> Ενεργά παιχνίδια! </h3>
<!-- <%= image_tag "#{g.name}/3.jpg" %> -->
<div class="center jumbotron">

  <div id="inline1">

    <div  class = "ena" id =" float1">
      <%= link_to 'Δημιούργησε Παιχνίδι', new_game_url, id: 'creategame'%>
    </div>

    <div class ="duo" id='gametable'>
      <table  >
        <% @games.order("created_at DESC").each do |g| %>
          <tr>
            <ul style="list-style-type:none" id = 'gameslayout'>
              <!-- carousel gia tis fwtografies twn ghpedwn -->
              
                <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                  <ol class="carousel-indicators">
                    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                  </ol>
                  <div class="carousel-inner">
                    <div class="carousel-item active">
                      <img class="d-block w-100" src="..." alt="First slide">

                    </div>
                    <div class="carousel-item">
                      <img class="d-block w-100" src="..." alt="Second slide">
                    </div>
                    <div class="carousel-item">
                      <img class="d-block w-100" src="#{g.name}/3.jpg" alt="Third slide">
                    </div>
                  </div>
                  <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                  </a>
                  <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                  </a>
                </div>
               
                  <% @stadio = Stadium.find(g.admin_id) %>
                  <% players_joined = g.hometeam.users.count + g.awayteam.users.count %>
                  <!-- kapoia stoixeia gia ton agwna -->
                  <li class="text"><%= "Όνομα γηπέδου : " + g.name %></li>
                  <li class="text"><%= "Ημερομηνία αγώνα : " + g.start_time.strftime("%d/%m/%Y") %></li>
                  <li class="text"><%= "'Ωρα διεξαγωγής : " + g.start_time.strftime("%I:%M - ") + g.end_time.strftime("%I:%M") %></li>
                  <li id="white"><%= "Τιμή : " + @stadio.price.to_s + "ανα άτομο" %></li>
                  <b><li style="color: red; text-align: center;"><%= "Άτομα : " + players_joined.to_s + "/" + @stadio.max_players.to_s %></li></b>
                  
                
                    <%= link_to 'Join game' , game_teams_path(g.id), id: 'join' %>
                  </li>
            </ul>
          </tr>
          <br>
        <% end %>
        </ul>
     </table>
    </div>

    <div  class="ena" id = "float">  
    
        <div style="color: green;"><%= current_user.name %><div>
        <div><%= image_tag(current_user.smallimage) %> </div>
      
    </div> 
    
  </div>

</div>

<script src="https://code.jquery.com/jquery-2.1.4.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js"></script>






