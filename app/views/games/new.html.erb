<h2 style="color:white;"> Stadiums !</h2>




<%= form_for (@game) do |f| %>

  <div style="overflow-x:auto;">
  <table align="center">
    <% @stadia.each do |t| %>

      <th style = "width:100px; height: 150px;" >
          <%=image_tag "#{t.stadium_name}/2.jpg" %>
          <h3><%= t.stadium_name %></h3>
          <h3><%= t.admin_id.to_s %></h3>
          <p><%= "Χωρητικότητα : " + t.max_players.to_s %></p>
          <p><%= "Τιμή : " + t.price.to_s + "/άτομο"%></p>

          <div>
            
          <%= f.label :Παίξε_εδώ %>
          <%= f.radio_button  :name, t.stadium_name  , :required => true  %>

          </div>
      </th> 
    <% end %>
  </table>
  </div>
  <br>
  
    <div id="inline">
      <div class="one">
         <%= f.label :Ποιά_μέρα_θές_να_παίξεις? %>
         <%= f.date_field :start_time , :required => true  %>
       </div>
    

      <div class="two">
        <%= f.label :Ποιά_ώρα_θές_να_παίξεις? , :id => "label" %>
        <div class="input-group clockpicker" id="float"  data-placement="left" data-align="top" data-autoclose="true" >
        

          <input  type="text" class="form-control" id="time1"  name="game[time]"required>

          <span class="input-group-addon">
              <span class="glyphicon glyphicon-time"></span>
          </span> 
        </div>

      </div>
    </div>
     

  <br>

  <div id="newgame">
    <%= f.submit "Δημιούργησε το παιχνίδι"  %>
  </div>

<% end %>

<br>
<br>

<script type="text/javascript" src="dist/bootstrap-clockpicker.min.js"></script>
<script type="text/javascript">
    $('.clockpicker').clockpicker();
</script>

  


