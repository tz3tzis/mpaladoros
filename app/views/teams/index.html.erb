    <!-- H lista me tous paiktes ths filoksenoumenhs omadas -->
     <ol style=" display: inline-block;">
      <h4 > Awayteam </h4>

      <% emptyList = @game.awayteam.capacity - @game.awayteam.users.count %>

     	<% @game.awayteam.users.each do |player| %>
