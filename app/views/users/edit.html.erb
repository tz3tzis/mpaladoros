<h3 style="color: white;"> Επεξεργάσου τα στοιχεία σου </h3>

<%= form_for @user do |u| %>
    <div class="form-group">              
        <div class="col-xs-6">
            <%= u.label :Ονοματεπώνυμο %>
            <%= u.text_field :name, :required => true %>
        </div>
    </div>


     <div class="form-group">              
        <div class="col-xs-6">
            <%= u.label :θέση %>
            <%= u.text_field :position, :required => true %>
        </div>
    </div>

    <div class="form-group">              
        <div class="col-xs-6">
            <%= u.label :Ύψος %>
            <%= u.number_field :height, :class => 'text_field', :step => 0.01, :required => true %>
        </div>
    </div>

    <div class="form-group">              
        <div class="col-xs-6">
            <%= u.label :Βάρος %>
            <%= u.number_field :weight, :class => 'text_field', :required => true %>
        </div>
    </div>


     <div class="form-group">              
        <div class="col-xs-6">
            <%= u.label :Ημερομηνία_γέννησης %>
            <%= u.date_field :birthday, :required => true %>
        </div>
    </div>


    <div class="form-group">              
        <div class="col-xs-6">
            <%= u.label :Πόλη %>
            <%= u.text_field :location, :required => true %>
        </div>
    </div>

    <div class="form-group">              
        <div class="col-xs-6">
            <%= u.label :Αγαπημένη_Ελληνική_ομάδα %>
            <%= u.text_field :teamgr %>
        </div>
    </div>

    <div class="form-group">              
        <div class="col-xs-6">
            <%= u.label :Αγαπημένη_Ξένη_ομάδα %>
            <%= u.text_field :teameu %>
        </div>
    </div>


    <div class="form-group">              
        <div class="col-xs-6">
            <i class="glyphicon glyphicon-ok-sign"></i><%= u.submit  "Αλλαγή στοιχείων", method: :post, :class => "btn btn-lg" %>
            <button class="btn btn-lg" type="reset"><i class="glyphicon glyphicon-repeat"></i> Αναίρεση</button>
        </div>
    </div>



<% end %>

