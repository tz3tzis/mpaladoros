<h3 style="color: white;"> Επεξεργάσου τα στοιχεία σου </h3>

<%= form_for @user do |u| %>
    <div class="form-group">              
        <div class="col-xs-6">
            <%= u.label :Όνομα %>
            <%= u.text_field :first_name, :required => true %>
        </div>
    </div>


    <div class="form-group">              
        <div class="col-xs-6">
            <%= u.label :Επίθετο %>
            <%= u.text_field :last_name, :required => true %>
        </div>
    </div>

     <div class="form-group">              
        <div class="col-xs-6">
            <%= u.label :θέση %>
            <%= u.text_field :position, :required => true %>
        </div>
    </div>

    <div class="form-group">              
        <div class="col-xs-6">
            <%= u.label :Ύψος %>
            <%= u.text_field :height, :required => true %>
        </div>
    </div>

    <div class="form-group">              
        <div class="col-xs-6">
            <%= u.label :Βάρος %>
            <%= u.text_field :weight, :required => true %>
        </div>
    </div>


     <div class="form-group">              
        <div class="col-xs-6">
            <%= u.label :Ημερομηνία_γέννησης %>
            <%= u.text_field :birthday, :required => true %>
        </div>
    </div>


    <div class="form-group">              
        <div class="col-xs-6">
            <%= u.label :Πόλη %>
            <%= u.text_field :town, :required => true %>
        </div>
    </div>

    <div class="form-group">              
        <div class="col-xs-6">
            <%= u.label :Αγαπημένη_Ελληνική_ομάδα %>
            <%= u.text_field :teamgr %>
        </div>
    </div>

    <div class="form-group">              
        <div class="col-xs-6">
            <%= u.label :Αγαπημένη_Ξένη_ομάδα %>
            <%= u.text_field :teameu %>
        </div>
    </div>


    <div class="form-group">              
        <div class="col-xs-6">
            <i class="glyphicon glyphicon-ok-sign"><%= u.submit  "Αλλαγή στοιχείων", method: :post  %>
            <button class="btn btn-lg" type="reset"><i class="glyphicon glyphicon-repeat"></i> Αναίρεση</button>
        </div>
    </div>



<% end %>

