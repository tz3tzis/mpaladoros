<hr>
<div class="container bootstrap snippet">
    <div class="row">
        <div class="col-sm-10"><h1 style="color: white;"><%= @user.name %></h1></div>
    </div>
    <div class="row">

        <!-- mono o current_user mporei na epejergastei ta stoixeia kai na allaksei thn fwtografia-->
       <% if can? :update, @user %>
          <div style="float:right;">
            <%= button_to "Επεξεργασία προφίλ", edit_user_path(@user), method: :get , class: 'btn btn-small' %>
          </div>
        <% end %>
        <!------------------------------------->
        
        <div class="col-sm-3"><!--left col-->
          <div class="text-center">

            <% if @user.avatar.file.nil? %>
              <img src="http://ssl.gstatic.com/accounts/ui/avatar_2x.png" class="avatar img-circle img-thumbnail" alt="avatar">
            <% else %>
              <%= image_tag(@user.avatar_url.to_s, class: "avatar img-circle img-thumbnail" ) %>
            <% end %>

             <% if can? :update, @user %>
              <%= form_for @user, :url => { :action => "avatar_update" }, :html => { :method => "put" } do |f| %>
                
                <div>
                  <%= f.label :Ανέβασε_άλλη_φωτογραφία %>
                  <%= f.file_field :avatar %>
                </div>

                <%= f.submit "Αλλαξε εικόνα" %>
              <% end %>
            <% end %>
          </div></hr><br>

               
          
        </div><!--/col-3-->


        <div class="col-sm-9">
              <ul class="nav nav-tabs">
                  <li class="active"><a data-toggle="tab" href="#home">Στοιχεία</a></li>
                  <li><a data-toggle="tab" href="#stats">Στατιστικά</a></li>
                </ul>

                
            <div class="tab-content">
                  <hr>


              <div class="tab-pane active" id="home" style="display:flex;">


                <div style="flex: 0 0 45%;" class="col-xs-6" >
                  <div class="panel panel-default">
                    <strong><div class="panel-heading">Αγαπημένη θέση<i class="fa fa-link fa-1x"></i></div></strong>
                    <hr style="color:black;">
                    <div class="panel-body"> <%= @user.position %></div>
                  </div>
                  
                  
                  <ul class="list-group" >
                    <li class="list-group-item text-muted"><strong><div  class="panel-heading">Αγώνες </strong> <i class="fa fa-dashboard fa-1x"></i></li>
                    <li class="list-group-item text-right"><span class="pull-left">Διοργάνωσε</span> <% @user.games_played %></li>
                    <li class="list-group-item text-right"><span class="pull-left">Συμμετείχε</span> <% @user.games_played %></li>
                    <li class="list-group-item text-right"><span class="pull-left">Likes</span> <%=  @user.likes   %></li>
                  </ul> 
                </div>


                 <div class="form-group" style="flex: 1;">
                      <div style="color:white;" >
                        <ul>
                             <hr>
                           <li><span> Ύψος: <%= @user.height %></li> </span>
                            <hr>
                           <li>Βάρος: <%= @user.weight %></li>
                            <hr>
                           <li>Ηλικία: <%= @user.age %></li> 
                            <hr>
                           <li>Πόλη: <%= @user.location %></li>
                            <hr>
                          <li> Αγαπημένη ομάδα(Ελληνική): <%= @user.teamgr %></li>
                            <hr>
                          <li> Αγαπημένη ομάδα(Ξένη): <%= @user.teameu %></li>
                            <hr>
                        </ul>
                      </div>
                  </div>
              </div><!--/tab-pane-->



              <div class="tab-pane" id="stats">
               
                  <div class="form-group">
                      <div style="color:white;" class="col-xs-6">
                         UID: <%= @user.uid %>
                      </div>
                  </div>
              </div><!--/tab-pane-->
              
            </div><!--/tab-pane-->
        </div><!--/tab-content-->
     </div><!--/col-9-->
</div><!--/row-->

                                 